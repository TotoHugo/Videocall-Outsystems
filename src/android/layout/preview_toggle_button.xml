<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ImageToggleButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="ON">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:id="@+id/switchPreview"
        android:src="@drawable/ic_perm_identity_white_36dp"
        android:paddingTop="2dp"
        android:paddingBottom="3dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/previewToggleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tag="ON"
        android:layout_below="@+id/switchPreview"
        android:src="@android:drawable/button_onoff_indicator_on"/>

</LinearLayout>